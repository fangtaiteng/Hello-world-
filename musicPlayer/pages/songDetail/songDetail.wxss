/* pages/recommendSong/recommendSong.wxss */
/* 顶部 */
.topInfo{
    width: 100%;
    height: 300rpx;
    overflow: hidden;
}
.topInfo .backgroundImage{
    width: 100%;
    filter: blur(20rpx);
}
.content{
    position: absolute;
    top: 50rpx;
    left: 20rpx;
    display: flex;
    align-items: center;
    /* background-color: antiquewhite; */
}
.content image{
    height: 200rpx;
    width: 200rpx;
    /* margin-right: 30rpx; */
    border-radius: 10rpx;
}
.content .dec{
    display: flex;
    flex-direction: column;
    justify-content: center;
    line-height: 60rpx;
    padding: 30rpx;
}
.info{
    font-size: 45rpx;
    color: white;
    max-width: 470rpx;
    overflow: hidden;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap
}

/* 音乐列表 */

.music-list-container{
    margin-top: 10rpx;
    padding: 10rpx;
}
.music-item{
    display: flex;
    height: 120rpx;
    align-items: center;
    margin-top: 8rpx;
}

.music-item .music-img image{
    height: 90rpx;
    width: 90rpx;
    border-radius: 8rpx;
    margin-right: 10rpx;
}
.music-item .music-text{
    display: flex;
    height: 100rpx;
    width: 100%;
    border-bottom: 2rpx solid #a3a3a3;
    flex-direction: column;
    padding: 0 20rpx ;
    
}
.music-text .firstline{
    font-size: 28rpx;
    line-height: 50rpx;
    height: 50rpx;
    max-width: 550rpx;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap
}
.music-text .secondline{
    font-size: 22rpx;
    line-height: 50rpx;
    height: 50rpx;
    max-width: 550rpx;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap
}