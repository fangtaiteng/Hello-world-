
/* 顶部 */
.topInfo{
    width: 100%;
    height: 300rpx;
    overflow: hidden;
}
.topInfo .backgroundImage{
    width: 100%;
    filter: blur(20rpx);
}
.content{
    position: absolute;
    top: 50rpx;
    left: 20rpx;
    display: flex;
    align-items: center;
    /* background-color: antiquewhite; */
}
.content image{
    height: 200rpx;
    width: 200rpx;
    /* margin-right: 30rpx; */
    border-radius: 10rpx;
}
.content .dec{
    display: flex;
    flex-direction: column;
    justify-content: center;
   
    padding: 30rpx;
}
.dec .firstLine{
    font-size: 28rpx;
}
.dec .secondLine{
   font-size: 26rpx; 
   line-height: 60rpx;
}
.dec .firstLine,
.dec .secondLine{
    color: white;
    max-width: 470rpx;
    /* overflow: hidden;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap */
}
/* 歌单列表 */
.songList{
    box-sizing: border-box;
    padding: 20rpx;
    margin-bottom: 80rpx;
}
.lists{
    width: 100%;
    margin-top:20rpx;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}
.listItem{
    width: 220rpx;
    margin-top: 10rpx;
}
.listItem image{
    width: 220rpx;
    height: 220rpx;
    border-radius: 20rpx;
}
.listItem .itemInfo{
    font-size: 28rpx;
}
.end{
    text-align: center;
    width: 100%;
    margin-top: 30rpx;
    color: rgb(51, 51, 51);
}