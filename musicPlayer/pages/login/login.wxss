/* pages/login/login.wxss */
.container{
    box-sizing: border-box;
    padding: 50rpx;
}
.wrapper{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.input-item input{ 
    width: 600rpx;
    height: 100rpx;
    background-color: rgb(245, 245, 245);
    margin-top: 30rpx;
    border-radius: 10rpx;
    padding-left: 20rpx;
}
.confirm-btn{
    padding: 0;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    background-color: #E25252;
    color: white;
    margin: 80rpx 0 40rpx 0;
    border-radius: 50rpx;
}